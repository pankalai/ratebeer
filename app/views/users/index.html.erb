<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  
 
  <% @users.each do |user| %>
     <!--
    <%= render user %>
     -->
    <h2>Username:</h2>
    <p><strong><%= user.username %></strong></p>
    <div>Has made <%= pluralize(user.ratings.count,'rating') %>, average rating <%= user.average_rating %></div>
    <p>
      <%= link_to "Show this user", user %>
    </p>
    <br>
  <% end %>
 
</div>

<%= link_to "New user", new_user_path %>
