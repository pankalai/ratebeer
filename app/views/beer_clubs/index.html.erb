
<h1>Beer clubs</h1>

<div class="container">
  <div class="col-sm-12 col-xl-10">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th><%= link_to "Name", beer_clubs_path(order: "name")%></th>
        <th><%= link_to "Founded", beer_clubs_path(order: "founded")%></th>
        <th><%= link_to "City", beer_clubs_path(order: "city")%></th>
      </tr>
      </thead>
      <tbody>
      <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club %></td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if false %>
<div id="beer_clubs">
  <% @beer_clubs.each do |beer_club| %>
    <%= render beer_club %>
    <p>
      <strong>Name:</strong>
      <%= beer_club.name %>
    </p>

    <p>
      <strong>Founded:</strong>
      <%= beer_club.founded %>
    </p>

    <p>
      <strong>City:</strong>
      <%= beer_club.city %>
    </p>

    <p>
      <%= link_to "Show this beer club", beer_club %>
    </p>
    <br>
  <% end %>
</div>
<% end %>
<br>
<%=link_to("New beer club", new_beer_club_path, class:'btn btn-primary') if current_user %>
