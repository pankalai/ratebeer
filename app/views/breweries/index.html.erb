<p style="color: green"><%= notice %></p>

<h1>Breweries</h1>

<p>Number of breweries: <%= @breweries.count %></p>

<div id="breweries">
  <% @breweries.order(year: :desc).each do |brewery| %>
	<div id="<%= dom_id brewery %>">
	  	<p>
		<%= link_to brewery.name, brewery %>, 
	  
		<strong>Year:</strong>
		<%= brewery.year %>
	  	</p>
	</div>
  <% end%>
</div>
<br>
<p>
	<% if current_user %>
		<%=link_to("New brewery", new_brewery_path)%> | 
	<% end %>
	<%=link_to 'List of beers', beers_path %>
</p>
